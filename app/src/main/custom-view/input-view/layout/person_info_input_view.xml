<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <EditText
            android:id="@+id/receiver_name"
            style="@style/NormalAppInputText"
            android:hint="@string/label_fullname"
            android:drawableTint="@color/colorText"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_receiver_black_24dp"
            android:layout_marginTop="@dimen/small_padding"/>

    <EditText
            android:id="@+id/receiver_phone"
            style="@style/NormalAppInputText"
            android:hint="@string/label_phone"
            android:drawableTint="@color/colorText"
            android:inputType="phone"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:layout_marginTop="@dimen/small_padding"/>

    <EditText
            android:id="@+id/receiver_email"
            style="@style/NormalAppInputText"
            android:hint="@string/label_email"
            android:drawableTint="@color/colorText"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:layout_marginTop="@dimen/small_padding"/>

</LinearLayout>
