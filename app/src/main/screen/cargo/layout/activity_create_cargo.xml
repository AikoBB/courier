<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/md_grey_200">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.iko.android.core.custom_view.CustomToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:id="@+id/layout_pick_up_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:padding="@dimen/small_padding"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/normal_padding"
                        android:layout_marginLeft="@dimen/normal_padding"
                        android:layout_marginRight="@dimen/normal_padding">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.iko.android.courier.ui.custom.TitleTextView
                                android:id="@+id/title_pick_up_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:title="@string/label_pickup_address"
                                android:drawable="@drawable/ic_delivery_truck_black_24dp"/>

                        <TextView
                                android:id="@+id/pick_up_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/normal_text"
                                android:textColor="#7F92A1"
                                android:text="Bishkek, Kyrgyz Republic"
                                app:layout_constraintTop_toBottomOf="@id/title_pick_up_address"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                android:layout_marginTop="16dp"/>

                        <com.iko.android.courier.ui.custom.TitleTextView
                                android:id="@+id/change_pick_up_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:title="@string/label_change_address"
                                android:drawable="@drawable/ic_location_on_purple_24dp"
                                android:layout_marginTop="@dimen/normal_padding"
                                android:background="@drawable/brg_outlined_corner"
                                android:layout_marginLeft="@dimen/extra_large_padding"
                                android:layout_marginRight="@dimen/extra_large_padding"
                                app:layout_constraintTop_toBottomOf="@id/pick_up_address"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/layout_delivery_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:padding="@dimen/small_padding"
                        app:layout_constraintTop_toBottomOf="@id/layout_pick_up_address"
                        android:layout_marginTop="@dimen/normal_padding"
                        android:layout_marginLeft="@dimen/normal_padding"
                        android:layout_marginRight="@dimen/normal_padding">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.iko.android.courier.ui.custom.TitleTextView
                                android:id="@+id/title_delivery_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:title="@string/label_delivery_address"
                                android:drawable="@drawable/ic_delivery_truck_black_24dp"/>

                        <TextView
                                android:id="@+id/delivery_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/normal_text"
                                android:textColor="#7F92A1"
                                android:text="1600 Amphitheatre Parkway Mountain View, CA 94043 United States"
                                app:layout_constraintTop_toBottomOf="@id/title_delivery_address"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                android:layout_marginTop="16dp"/>

                        <com.iko.android.courier.ui.custom.TitleTextView
                                android:id="@+id/change_delivery_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:title="@string/label_change_address"
                                android:drawable="@drawable/ic_location_on_purple_24dp"
                                android:background="@drawable/brg_outlined_corner"
                                android:layout_marginTop="@dimen/normal_padding"
                                app:layout_constraintTop_toBottomOf="@id/delivery_address"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginStart="@dimen/extra_large_padding"
                                android:layout_marginEnd="@dimen/extra_large_padding" android:layout_marginBottom="16dp"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/layout_delivery_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:padding="@dimen/small_padding"
                        app:layout_constraintTop_toBottomOf="@id/layout_delivery_address"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="@dimen/normal_padding"
                        android:layout_marginLeft="@dimen/normal_padding"
                        android:layout_marginRight="@dimen/normal_padding"
                        android:layout_marginBottom="200dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.iko.android.courier.ui.custom.TitleTextView
                                android:id="@+id/title_delivery_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:title="@string/label_delivery_date"
                                android:drawable="@drawable/ic_date_time_black_24dp"/>

                        <LinearLayout
                                android:id="@+id/layout_date_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/normal_padding"
                                app:layout_constraintTop_toBottomOf="@id/title_delivery_date"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:weightSum="3"
                                android:background="@drawable/brg_outlined_corner"
                                android:padding="@dimen/small_padding">

                            <TextView
                                    android:id="@+id/delivery_date"
                                    style="@style/NormalAppText"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.8"
                                    android:drawableTint="@color/colorText"
                                    android:text="@string/label_date"
                                    android:background="@drawable/bgr_right_divider"
                                    android:layout_marginRight="4dp"
                                    android:gravity="center"
                                    android:drawableLeft="@drawable/ic_date_range_black_24dp"/>

                            <TextView
                                    android:id="@+id/delivery_time"
                                    style="@style/NormalAppText"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.8"
                                    android:drawableTint="@color/colorText"
                                    android:text="@string/label_time"
                                    android:background="@drawable/bgr_right_divider"
                                    android:layout_marginRight="4dp"
                                    android:gravity="center"
                                    android:drawableLeft="@drawable/ic_time_black_24dp"/>

                            <TextView
                                    android:id="@+id/delivery_type"
                                    style="@style/NormalAppText"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.4"
                                    android:drawableTint="@color/colorText"
                                    android:text="@string/label_type"
                                    android:gravity="center"
                                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                                    android:drawableLeft="@drawable/ic_speedometer_black_24dp"/>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </LinearLayout>

    <Button
            android:id="@+id/create"
            style="@style/RoundedButton"
            android:layout_gravity="bottom"
            android:text="@string/label_place_order"/>

</FrameLayout>
